{% set entries = craft.entries 
    .section(section)
    .limit(limit)
    .all()
%}
{# This is for the individual journal entries #}
<div class="journal-entry">
    {% for entry in entries %}
        {# {% set entryImage = entry.image.one() %} #}
            <h2 class="journal-entry-title">{{ entry.title }}</h2>

            <h4 class="journal-date">{{ entry.date }} &bull; <span class="post-author">{{ entry.postAuthor }}</span></h4>

            {# <div class="post-author">{{ entry.postAuthor }}</div> #}

            <p class="post-content">{{ entry.postContent}}</p>

            {# {% if entryImage %}
                <img
                    src="{{ entry.images.one().url() }}"
                    class="post-img"
                    alt="{{ entry.title }}"
            {% endif %} #}
        
    {% endfor %}
</div>